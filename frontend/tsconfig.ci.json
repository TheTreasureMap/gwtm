{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"noImplicitAny": false,
		"moduleResolution": "bundler",
		"module": "esnext",
		"target": "esnext",
		"noEmit": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"]
		}
	},
	"include": [
		"vite.config.ts",
		"src/app.d.ts",
		".svelte-kit/ambient.d.ts",
		"src/lib/validation/**/*",
		"src/lib/utils/**/*",
		"src/lib/stores/**/*",
		"src/lib/hooks/**/*",
		"src/test-utils/**/*",
		"src/lib/design-system/**/*",
		"src/lib/api/**/*",
		"src/lib/components/forms/FormField.svelte",
		"src/lib/components/forms/CoordinateFields.svelte",
		"src/lib/components/ui/Card.svelte",
		"src/lib/components/ui/Button.svelte",
		"src/routes/login/**/*"
	]
}
